#include <stdio.h>

int main()
{
    int n;
    scanf("%d",&n);
    int arr[n];
    for(int i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    for(int j=0;j<n;j++)
    {
        if(arr[j]==1)
            printf("2\n");
        else if(arr[j]%3==0)
            printf("%d\n",(arr[j]/3));
        else if(arr[j]%3==1)
            printf("%d\n",(arr[j]/3)+1);
        else
            printf("%d\n",(arr[j]/3)+1);
    }

    return 0;
}
